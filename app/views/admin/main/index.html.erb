<section class='admin-users-index'>
	<h2 class="users-index-heading text-center">All Actions</h2>
	<%= link_to new_admin_agent_action_path, class: 'btn btn-gen add-button' do %>
		<span><i class='fa fa-plus-square fa-1x'></i> Add New Agent Action</span>
	<% end %>
	<hr class="generic">
	<div class="container-fluid">
		<table class="table table-bordered">
		  <thead>
		    <tr>
		      <th>Image</th>
		      <th>Title</th>
		      <th>Performed?</th>
		      <th>Ignored?</th>
		      <th>Created at / Updated at</th>
		      <th>Action</th>
		    </tr>
		  </thead>
		  <tbody>
		    <% if @agent_actions %>
		      <% @agent_actions.each do |agent| %>
		        <tr>
		        	<td><img src="<%= agent.image_link %>" style="width: 100px; height: 100px;"></td>
		        	<td><%= agent.title %></td>
		        	<td>
			        	<% unless agent.performed? %>
			        		<%= link_to 'mark as performed', admin_agent_action_path(agent.id, performed: true), method: :put %>
			        	<% else %>
			        		<%= agent.performed? %>
			        	<% end %>
		        	</td>
		        	<td>
		        		<% unless agent.ignored? %>
		        			<%= link_to 'mark as ignored', admin_agent_action_path(agent.id, ignored: true), method: :put %>
		        		<% else %>
		        			<%= agent.ignored? %>
		        		<% end %>
		        	</td>
		        	<th>created_at: <%= agent.created_at.strftime("%m/%d/%Y") %> / updated_at: <%= agent.updated_at.strftime("%m/%d/%Y")%></th>
		        	<td><%= link_to admin_agent_action_path(agent.id), method: :delete, data: { confirm: 'Are you sure you want to delete this action?' } do %>
		        	    <%= 'Delete' %>
		        	  <% end %>
		        	</td>
		        </tr>
		      <% end %>
		    <% end %>
		  </tbody>
		</table>
	</div>
</section>